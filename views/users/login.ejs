<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <div>
            <div class="col-8 offset-2 mt-3 ">
                <h3>Login for NestVibes</h3>
                <form action="/login" method="post" class="needs-validation" novalidate >
                    <div class="mb-3">
                        <label for="username" class="form-label">UserName</label>
                        <input class="form-control" type="text" placeholder="Enter username" name="username" id="username"   >
                        
                    </div>
    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input class="form-control" type="password" name="password" placeholder="Enter Password" id="password" >
                    </div>
                   
                    <button class="btn btn-dark add-btn">Login</button>
                    <br><br>
                </form>
            </div>
        </div>
       
    </div>
<% layout("/layouts/boilerplate.ejs") %>
    <body>
           <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-4">
                <% for( listing of allListing ) { %>
                    <a href="/listings/<%= listing._id %>" class="text-decoration-none" >
                    <div class="card card-listing col">
                        <img src="<%= listing.image.url %>" style="height: 20rem;" class="card-img-top" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text"> 
                                 <b>  <%= listing.title %></b> <br> <%= listing.price.toLocaleString("en-IN") %>/night 
                            </p>
                        </div>
                    </div>  
                    </a>
                <% } %>
           </div>
    </body>